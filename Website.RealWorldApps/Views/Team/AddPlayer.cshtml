@{
    ViewBag.Title = "AddPlayer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" action="/Team/AddPlayer">
    <div class="page-header">
        <h2>Add New Player</h2>
    </div>
    <div class="panel">
        <div class="panel-body">
            <ul class="list-unstyled">
                <li>League: @Html.TextBox("league")</li>
                <li>Name: @Html.TextBox("playerName")</li>
                <li>Number: @Html.TextBox("playerNumber")</li>
                <li>Position: @Html.TextBox("position")</li>
                <li>ImgName: @Html.TextBox("imgUrl")</li>
            </ul>
            <input type="submit" value="Submit" />
        </div>
    </div>
</form>