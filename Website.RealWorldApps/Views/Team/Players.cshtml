@model IEnumerable<Website.RealWorldApps.Models.Player>

@{
    ViewBag.Title = "Players";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>

<div class="panel-body">
    @foreach (var player in Model)
    {
        <div class="page-header text-center">
            <div class="text-center">
                <a href="~/Content/Images/@player.ImgName" data-lightbox="players"><img src="~/Content/Images/@player.ImgName" alt="@player.Name" class="img-circle" style="height:120px; width:120px;" /></a>
            </div>
            <div class="panel-body text-center">
                <div class="row">
                    @player.Name
                </div>
                <div class="row">
                    @player.JerseyNumber
                </div>
                <div class="row">
                    @player.Position
                </div>
            </div>
        </div>
    }

</div>