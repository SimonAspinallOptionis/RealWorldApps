@model IEnumerable<Website.RealWorldApps.Models.Player>

@{
    ViewBag.Title = "Players";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>

<ul class="nav nav-tabs">
    <li class="dropdown active">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
            Under 13&nbsp;<span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li class="active"><a href="#white" data-toggle="tab">White</a></li>
            <li class="divider"></li>
            <li><a href="#green" data-toggle="tab">Green</a></li>
        </ul>
    </li>
    <li><a href="#under14" data-toggle="tab">Under 14</a></li>
    <li><a href="#under15" data-toggle="tab">Under 15</a></li>
    <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
            Under 16&nbsp;<span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><a href="#conference16" data-toggle="tab">Conference</a></li>
            <li class="divider"></li>
            <li><a href="#premier16" data-toggle="tab">Premier</a></li>
        </ul>
    </li>
    <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
            Under 18&nbsp;<span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><a href="#conference18" data-toggle="tab">Conference</a></li>
            <li class="divider"></li>
            <li><a href="#premier18" data-toggle="tab">Premier</a></li>
        </ul>
    </li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="white">
        @foreach (var player in Model)
        {
            <div class="page-header text-center">
                <div class="text-center">
                    <a href="~/Content/Images/@player.ImgName" data-lightbox="players"><img src="~/Content/Images/@player.ImgName" alt="@player.Name" class="img-circle" style="height:120px; width:120px;" /></a>
                </div>
                <div class="panel-body text-center">
                    <div class="row">
                        @player.Name
                    </div>
                    <div class="row">
                        @player.JerseyNumber
                    </div>
                    <div class="row">
                        @player.Position
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="tab-pane fade in" id="green">
        <div class="page-header text-center">
            Under 13 Green Under Construction
        </div>
    </div>
    <div class="tab-pane fade in" id="under14">
        <div class="page-header text-center">
            Under 14 Under Construction
        </div>
    </div>
    <div class="tab-pane fade in" id="under15">
        <div class="page-header text-center">
            Under 15 Under Construction
        </div>
    </div>
    <div class="tab-pane fade in" id="conference16">
        <div class="page-header text-center">
            Under 16 Conference Under Construction
        </div>
    </div>
    <div class="tab-pane fade in" id="premier16">
        <div class="page-header text-center">
            Under 16 Premier Under Construction
        </div>
    </div>
    <div class="tab-pane fade in" id="conference18">
        <div class="page-header text-center">
            Under 18 Conference Under Construction
        </div>
    </div>
    <div class="tab-pane fade in" id="premier18">
        <div class="page-header text-center">
            Under 18 Premier Under Construction
        </div>
    </div>
</div>