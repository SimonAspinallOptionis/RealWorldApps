@model List<Website.RealWorldApps.Models.Game>

@{
    ViewBag.Title = "Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>

<ul class="nav nav-tabs">
    <li class="active"><a href="#under13" data-toggle="tab">Under 13</a></li>
    <li><a href="#under14" data-toggle="tab">Under 14</a></li>
    <li><a href="#under15" data-toggle="tab">Under 15</a></li>
    <li><a href="#under16" data-toggle="tab">Under 16</a></li>
    <li><a href="#under18" data-toggle="tab">Under 18</a></li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="under13">
        <ul class="list-inline">
            @for (int i = 0; i < Model.Count; i++)
            {
                <li>
                    <div class="panel-body">
                        <div class="panel-body">
                            <div class="row text-center">
                                <a href="~/Game/GameDetails?id=@i">
                                    <img src="~/Content/Images/@Model[i].ImgName" alt="@Model[i].OpponentName" class="img-rounded" style="height: 120px; width:120px;" />
                                </a>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                Opponent: @Model[i].OpponentName
                            </div>
                            <div class="row">
                                Final Score: @Model[i].CheshireScore : @Model[i].OpponentScore
                                @if (Model[i].WonGame)
                                {
                                    <span>W</span>
                                }
                                else
                                {
                                    <span>L</span>
                                }
                            </div>
                            <div class="row">
                                Location: @Model[i].Location
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="tab-pane fade in" id="under14">
        <div class="page-header text-center">
            Under 14 Under Construction
        </div>
    </div>
    <div class="tab-pane fade in" id="under15">
        <div class="page-header text-center">
            Under 15 Under Construction
        </div>
    </div>
    <div class="tab-pane fade in" id="under16">
        <div class="page-header text-center">
            Under 16 Under Construction
        </div>
    </div>
    <div class="tab-pane fade in" id="under18">
        <div class="page-header text-center">
            Under 18 Under Construction
        </div>
    </div>
</div>