<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="white">
        <ul class="list-unstyled">
            @foreach (var result in (List<Result>)ViewBag.Under13WhiteResults)
            {
                <li>
                    <div class="page-header text-center">
                        <div class="panel-body text-center">
                            <div class="row">
                                <a href="~/Game/GameDetails?id=@result.Id">
                                    <img src="~/Content/Images/@result.ImgName" alt="@result.Fixture.Organisation" class="img-rounded" style="height: 120px; width:120px;" />
                                </a>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                Opponent: @result.Fixture.Organisation&nbsp;@result.Fixture.OpponentName
                            </div>
                            <div class="row">
                                Final Score: @result.CheshireScore : @result.OpponentScore
                                @if (result.CheshireScore > result.OpponentScore)
                                {
                                    <span>W</span>
                                }
                                else
                                {
                                    <span>L</span>
                                }
                            </div>
                            <div class="row">
                                Location: @result.Fixture.AddressLine1,&nbsp;@result.Fixture.TownCity
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
